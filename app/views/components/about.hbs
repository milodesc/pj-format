{{#resume.basics}}
<div class="container about-container">
  {{> title value="About"}}

  {{#if location}}
    {{#location}}
    {{> info-tag text=(formatAddress address city region postalCode countryCode)}}
    {{/location}}
  {{/if}}

  {{#if email}}
    {{> info-tag text=this.email}}
  {{/if}}

  {{#if phone}}
    {{> info-tag text=this.phone}}
  {{/if}}

  {{#if website}}
    {{> info-tag text=this.website icon="fa-desktop" url=this.website}}
  {{/if}}

  {{!-- {{#if profiles}}
    {{#each profiles}}
        {{> social}}
    {{/each}}
  {{/if}} --}}
</section>
{{/resume.basics}}
